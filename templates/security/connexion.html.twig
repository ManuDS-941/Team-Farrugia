{% extends 'base.html.twig' %}

{% block title %}Team Farrugia : Administrateur{% endblock %}

{% block body %}

    <h1 class="text-center mt-4">Connexion</h1>

    {% if error %}

    <p class="bg-danger text-white text-center p-3 col-md-4 mx-auto rounded">
        {{ error.messageKey|trans(error.messageData, 'security') }}
        {# trans(error.messageData, 'security') : permet de pointer sur le fichier 'tranlsations/security.en.php' qui contient la personnalisation des messages utilisateurs par d√©fault de Symfony #}
    </p>
        
    {% endif %}

    <form action="{{ path('connexion') }}" method="post" class="col-md-3 mx-auto">

        <div class="from-group">
            <label for="">E-Mail :</label>
            <input type="text" class="form-control" id="_username" name="_username" value="{{ last_username }}">
        </div>
        {# on stock dans l'attribut 'value' le dernier mail saisi par l'internaute encas d'erreur d'authentification #}
            {# last_username : variable qui provient du controller SecurityController #}

        <div class="from-group mt-2">
            <label for="">Mot de Passe :</label>
            <input type="password" class="form-control" id="_password" name="_password">
        </div>

        <input type="submit" class="btn btn-dark mt-3" value="Connexion">
    </form>

    {# <div class="text-center mt-4 mb-4">Pas de compte ? <a href="{{ path('inscription') }}" class=""> Inscrivez-vous</a></div> #}

{% endblock %}
