{% extends 'base.html.twig' %}

{% block title %}Team Farrugia : Notre Effectif{% endblock %}

{% block body %}

<h1 class="text-center mt-4">CONTACTEZ - NOUS</h1>

{% for message in app.flashes('success') %}
    <div class="bg-success text-white text-center col-md-4 mx-auto rounded p-3 mb-3">
        {{ message }}
    </div>
{% endfor %}

{{ form_start(formContact, {'attr': {'class': 'col-md-5 mx-auto m-4'}})}}

<div class="form-group">
    {{ form_row(formContact.nom, {'label': "Nom :", 'attr': {'class': 'form-control'}} ) }}
</div>
<div class="form-group">
    {{ form_row(formContact.prenom, {'label': "Prenom :", 'attr': {'class': 'form-control'}} ) }}
</div>
<div class="form-group">
    {{ form_row(formContact.email, {'label': "E-mail :", 'attr': {'class': 'form-control'}} ) }}
</div>
<div class="form-group">
    {{ form_row(formContact.objet, {'label': "Objet :", 'attr': {'class': 'form-control'}} ) }}
</div>
<div class="form-group">
    {{ form_row(formContact.message, {'label': "Message :", 'attr': {'class': 'form-control'}} ) }}
</div>

<div class="text-center">
    <button type="submit" class="btn btn-dark mt-4 mb-4 ">Envoyer</button>
</div>

{{ form_end(formContact)}}

{% endblock %}
