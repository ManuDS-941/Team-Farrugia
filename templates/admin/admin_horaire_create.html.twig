{% extends "base.html.twig" %}

{% block title %}Ajout d'un Horaire{% endblock %}

{% block body %}

<h1 class="text-center mt-4">Ajout d'un Horaire</h1>

{{ form_start(formHoraire, {'attr': { 'class': 'col-md-4 mx-auto'}} )}}


<div class="form-group">
    {{ form_row(formHoraire.titre, {'label': "Titre :", 'attr': {'class': 'form-control'}}) }}
</div>

<div class="form-group">
    {{ form_row(formHoraire.jour1, {'label': "Jour 1 :", 'attr': {'class': 'form-control'}}) }}
</div>

<div class="form-group">
    {{ form_row(formHoraire.jour2, {'label': "Jour 2 :", 'attr': {'class': 'form-control'}}) }}
</div>

<div class="form-group">
    {{ form_row(formHoraire.jour3, {'label': "Jour 3 :", 'attr': {'class': 'form-control'}}) }}
</div>

<div class="text-center">
    <a href="{{ path('admin_info')}}" class="btn btn-dark col-5 mr-2">Retour</a>
    <button type="submit" class="col-5 btn btn-success mt-4 mb-4">Ajouter</button>
</div>

{{ form_end(formHoraire)}}


{% endblock %}