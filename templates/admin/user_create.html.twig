{% extends "base.html.twig" %}

{% block title %}Ajout d'un Utilisateur{% endblock %}

{% block body %}

<h1 class="text-center mt-4">Ajouter un Utilisateur</h1>

    {{ form_start(formUser, {'attr': { 'class': 'col-md-4 mx-auto'}} ) }}

    <div class="form-group">
        {{ form_row(formUser.username, {'label': "Nom d'utilisateur", 'attr': {'class': 'form-control'}}) }}
    </div>

    <div class="form-group">
        {{ form_row(formUser.email, {'label': "E-Mail", 'attr': {'class': 'form-control'}} ) }}
    </div>

    <div class="form-group">
        {{ form_row(formUser.password, {'label': "Mot de Passe", 'attr': {'class': 'form-control'}}) }}
    </div>

    <div class="form-group">
        {{ form_row(formUser.confirm_password, {'label': "Confirmer votre mot de passe", 'attr': {'class': 'form-control'}}) }}
    </div>

    <div class="text-center">
        <button type="submit" class="col-12 btn btn-dark mt-4 mb-4">Ajouter</button>
    </div>

    {{ form_end(formUser) }}
    
{% endblock %}