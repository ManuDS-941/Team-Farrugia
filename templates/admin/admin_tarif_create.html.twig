{% extends "base.html.twig" %}

{% block title %}Ajout d'un Tarif{% endblock %}

{% block body %}

<h1 class="text-center mt-4">Ajout d'un Tarif</h1>

{{ form_start(formTarif, {'attr': { 'class': 'col-md-4 mx-auto'}} )}}

<div class="form-group">
    {{ form_row(formTarif.titre, {'label': "Titre :", 'attr': {'class': 'form-control'}}) }}
</div>

<div class="form-group">
    {{ form_row(formTarif.prix, {'label': "Prix :", 'attr': {'class': 'form-control'}}) }}
</div>

<div class="text-center">
    <a href="{{ path('admin_info')}}" class="btn btn-dark col-5 mr-2">Retour</a>
    <button type="submit" class="col-5 btn btn-success mt-4 mb-4">Ajouter</button>
</div>

{{ form_end(formTarif)}}


{% endblock %}